{
    "manifest_version": 3,
    "name": "E-Commerce Filter Saver",
    "version": "1.0",
    "description": "Save and reapply your favorite filters on Myntra and Ajio",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": [
      "*://*.myntra.com/*",
      "*://*.ajio.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.myntra.com/*", "*://*.ajio.com/*"],
        "js": ["contentScript.js"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }